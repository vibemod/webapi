<?xml version="1.0"?>
<ruleset name="App" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="vendor/squizlabs/php_codesniffer/phpcs.xsd">
    <description>App</description>

    <!-- Extending rulesets -->
    <rule ref="./vendor/contributte/qa/ruleset-8.4.xml">
        <exclude name="Squiz.WhiteSpace.LanguageConstructSpacing"/>
        <exclude name="SlevomatCodingStandard.Classes.SuperfluousInterfaceNaming.SuperfluousSuffix"/>
    </rule>

    <!-- Specific rules -->
    <rule ref="SlevomatCodingStandard.Files.TypeNameMatchesFileName">
        <properties>
            <property name="rootNamespaces" type="array">
                <element key="src" value="App"/>
                <element key="tests" value="Tests"/>
                <element key="db" value="Database"/>
            </property>
        </properties>
    </rule>
</ruleset>
